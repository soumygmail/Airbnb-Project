<%- include("./partials/header") %>

<style>
	body {background-color: powderblue;}
</style>


<div class="container rounded" style="position: fixed; width:90%; margin: 70px 640px;">
	
<div class="row" style="text-align: center">
	<div class="col-md-4 login-form-2">
		<h3 style="font-size: 28px; padding-bottom: 25px">Login</h3>

			<form action="/login" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="username" placeholder="Username">
				</div>

				<div class="form-group" style="padding-bottom: 20px">
					<input type="password" class="form-control" name="password" placeholder="Password">
				</div>

				<div class="form-group">
					<input type="submit" class="btnSubmit" value="Login" style="font-size: 20px">
				</div>

				<div class="form-group" style="padding-bottom: 50px">
					<p>
						<strong style="color: white">Don't have an account?</strong>
					</p>
					<a href="/register" class="SignUp" style="font-size: 30px;">Sign Up!</a><br>
				</div>

				<i class="fab fa-airbnb" style="color:white; font-size: 90px" ></i>
			</form>

		</div>
	</div>
</div>


<%- include("./partials/footer") %>